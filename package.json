{
  "name": "training-bot",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "devDependencies": {
    "@types/config": "^3.3.5",
    "@types/node": "^24.6.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsc-esm-fix": "^3.1.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@grammyjs/commands": "^1.2.0",
    "@grammyjs/i18n": "^1.1.2",
    "@grammyjs/menu": "^1.3.1",
    "config": "^4.1.1",
    "dotenv": "^17.2.2",
    "grammy": "^1.38.2",
    "mysql2": "^3.15.1",
    "nodemon": "^3.1.10",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.27"
  },
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc && tsc-alias && tsc-esm-fix",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "lint": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write .",
    "migration:run": "npm run build && cross-env NODE_ENV=production npx typeorm migration:run --dataSource ./dist/data-source.js",
    "migration:generate": "npx typeorm-ts-node-esm migration:generate --dataSource ./src/data-source.ts",
    "migration:revert": "npm run build && cross-env NODE_ENV=production npx typeorm migration:revert --dataSource ./dist/data-source.js"
  }
}
